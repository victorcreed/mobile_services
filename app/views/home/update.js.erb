<% if @list.banned? %>
$("#image-<%= @list.id %>").replaceWith(' <%= link_to 'Remove', home_path(@list, home: {banned: false}), method: :put, remote: true, id: "image-#{@list.id}" %>');
<% else %>
$("#image-<%= @list.id %>").replaceWith('<%= link_to 'Allow', home_path(@list, home: {banned: true}), method: :put, remote: true, id: "image-#{@list.id}" %>');
<%end %>